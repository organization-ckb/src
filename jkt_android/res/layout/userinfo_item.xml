<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
         >

        <ImageView
            android:id="@+id/iv_userinfo_p"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/userhead_image" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" 
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/tv_userinfo_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:text="张三"
                android:textColor="#000000"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" 
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/tv_userinfo_level"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="PHP高级工程师"
                    android:textColor="#787878"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" 
                    
                    >

                    <TextView
                        android:id="@+id/tv_userinfo_lastday"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="剩余工作日:"
                        android:textColor="#787878"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_userinfo_day"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:text="3"
                        android:textColor="#E8443A"
                        android:textSize="20sp" 
                        android:singleLine="true"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/contract_downarror"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_renewal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="续约"
            android:textColor="#27a6a0"
            android:textSize="20sp" 
            android:paddingTop="7dp"
            android:paddingBottom="12dp"
            />
    </LinearLayout>

</LinearLayout>